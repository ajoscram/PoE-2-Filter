#.section Gear

#.alias GEAR_SALVAGE  = "Body Armours" "Boots" "Gloves" "Helmets" "Shields" "Foci" "Life Flasks" "Mana Flasks"
#.alias GEAR_VALUABLE = "Amulets" "Rings" "Jewels"
#.alias GEAR_MISC     = "Belts" "Charms" "Quivers"

#.subsection Priming

# Valuables

Show
    Continue
    Class == GEAR_VALUABLE
    Rarity == Rare
    #.import STYLE | gear > rare -> t3

Show
    Continue
    Class == GEAR_VALUABLE
    Rarity == Magic
    #.import STYLE | gear > magic -> t3

Show
    Continue
    Class == GEAR_VALUABLE
    Rarity == Normal
    #.import STYLE | gear > normal -> t3

# Miscellaneous

Show
    Continue
    Class == GEAR_MISC GEAR_SALVAGE
    Rarity == Rare
    #.import STYLE | gear > rare -> t4

Show
    Continue
    Class == GEAR_MISC GEAR_SALVAGE
    Rarity == Magic
    #.import STYLE | gear > magic -> t4

Show
    Continue
    Class == GEAR_MISC GEAR_SALVAGE
    Rarity == Normal
    #.import STYLE | gear > normal -> t4

