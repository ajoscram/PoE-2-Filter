#.subsection Miscellaneous

# Sockets

Show #.strict LENIENT .if Show
    Class == GEAR_SALVAGE
    Sockets == 2

Show #.strict BASE .if Show
    Class == GEAR_SALVAGE
    Sockets == 1

# Quality

Show #.strict STRICT .if Show
    Class == GEAR_SALVAGE
    Quality >= 20

Show #.strict LENIENT .if Show
    Class == GEAR_SALVAGE
    Quality >= 15

Show #.strict BASE .if Show
    Class == GEAR_SALVAGE
    Quality >= 10

Show #.strict BASE .if Show
    Class == GEAR_SALVAGE
    Quality >= 5
    AreaLevel < LEVEL_ENDGAME_START

# Rares

Show #.strict STRICT .if Show
    Class == GEAR_VALUABLE
    Rarity == Rare

Show #.strict LENIENT .if Show
    Class == GEAR_MISC GEAR_SALVAGE
    Rarity == Rare

Show
    Class == GEAR_MISC GEAR_SALVAGE GEAR_VALUABLE
    Rarity == Rare
    AreaLevel < LEVEL_ENDGAME_START

# Hidden

Hide
    Class == GEAR_MISC GEAR_SALVAGE GEAR_VALUABLE
    Rarity == Rare
    #.import STYLE | gear > rare -> t5
    #.import STYLE | miscellaneous -> hidden

Hide
    Class == GEAR_MISC GEAR_SALVAGE GEAR_VALUABLE
    Rarity == Magic
    #.import STYLE | gear > magic -> t5
    #.import STYLE | miscellaneous -> hidden

Hide
    Class == GEAR_MISC GEAR_SALVAGE GEAR_VALUABLE
    Rarity == Normal
    #.import STYLE | gear > normal -> t5
    #.import STYLE | miscellaneous -> hidden